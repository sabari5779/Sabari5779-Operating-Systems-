#include <stdio.h>

struct emp {
    int id;
    char name[20];
};

int main() {
    struct emp e;
    FILE *fp = fopen("emp.dat", "wb+");

    printf("Enter ID and Name: ");
    scanf("%d %s", &e.id, e.name);

    fwrite(&e, sizeof(e), 1, fp);
    rewind(fp);

    fread(&e, sizeof(e), 1, fp);
    printf("ID: %d Name: %s\n", e.id, e.name);

    fclose(fp);
    return 0;
}
