#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>

sem_t empty, full;

void* produce() {
    sem_wait(&empty);
    printf("Produced\n");
    sem_post(&full);
}

void* consume() {
    sem_wait(&full);
    printf("Consumed\n");
    sem_post(&empty);
}

int main() {
    pthread_t p, c;
    sem_init(&empty, 0, 1);
    sem_init(&full, 0, 0);

    pthread_create(&p, NULL, produce, NULL);
    pthread_create(&c, NULL, consume, NULL);

    pthread_join(p, NULL);
    pthread_join(c, NULL);
}
