#include <stdio.h>

int main() {
    int n, bt[10], rt[10], tq, time = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for(int i=0;i<n;i++) {
        printf("Enter burst time P%d: ", i+1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
    }

    printf("Enter time quantum: ");
    scanf("%d", &tq);

    int done;
    do {
        done = 1;
        for(int i=0;i<n;i++) {
            if(rt[i] > 0) {
                done = 0;
                if(rt[i] > tq) {
                    time += tq;
                    rt[i] -= tq;
                } else {
                    time += rt[i];
                    printf("P%d finished at %d\n", i+1, time);
                    rt[i] = 0;
                }
            }
        }
    } while(!done);

    return 0;
}
