#include <stdio.h>
#include <sys/ipc.h>
#include <sys/msg.h>

struct msg {
    long type;
    char text[100];
};

int main() {
    struct msg m;
    int id = msgget(1234, 0666 | IPC_CREAT);

    m.type = 1;
    printf("Enter message: ");
    gets(m.text);

    msgsnd(id, &m, sizeof(m.text), 0);
    printf("Message sent\n");

    return 0;
}
