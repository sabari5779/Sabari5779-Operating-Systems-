#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd;
    struct stat fileStat;
    DIR *d;
    struct dirent *dir;

    // File creation using fcntl/open
    fd = open("demo.txt", O_CREAT | O_RDWR, 0644);
    write(fd, "Hello UNIX I/O", 13);

    // Move file pointer using lseek
    lseek(fd, 0, SEEK_SET);

    char buf[20];
    read(fd, buf, 13);
    buf[13] = '\0';

    printf("Read using lseek: %s\n", buf);

    // File info using stat
    stat("demo.txt", &fileStat);
    printf("\nFile Size: %ld bytes\n", fileStat.st_size);
    printf("Inode: %ld\n", fileStat.st_ino);

    close(fd);

    // Directory listing using opendir and readdir
    printf("\nDirectory Contents:\n");
    d = opendir(".");
    while((dir = readdir(d)) != NULL) {
        printf("%s\n", dir->d_name);
    }
    closedir(d);

    return 0;
}
