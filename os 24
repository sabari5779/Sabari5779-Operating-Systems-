#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd = open("test.txt", O_CREAT | O_WRONLY, 0644);
    write(fd, "Hello UNIX", 10);
    close(fd);

    fd = open("test.txt", O_RDONLY);
    char buf[20];
    read(fd, buf, 10);
    printf("Read: %s\n", buf);

    close(fd);
    return 0;
}
