#include <stdio.h>
#include <stdlib.h>

void sort(int arr[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

int main() {
    int n, head, disk_size, i;
    int total_seek = 0;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];

    printf("Enter disk requests:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &req[i]);
    }

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &disk_size);

    sort(req, n);

    printf("\nSeek Sequence:\n");

    // Move right
    for (i = 0; i < n; i++) {
        if (req[i] >= head) {
            printf("%d -> %d\n", head, req[i]);
            total_seek += abs(req[i] - head);
            head = req[i];
        }
    }

    // Move to end
    printf("%d -> %d\n", head, disk_size - 1);
    total_seek += abs((disk_size - 1) - head);
    head = disk_size - 1;

    // Move left
    for (i = n - 1; i >= 0; i--) {
        if (req[i] < head) {
            printf("%d -> %d\n", head, req[i]);
            total_seek += abs(req[i] - head);
            head = req[i];
        }
    }

    printf("\nTotal Seek Time = %d\n", total_seek);

    return 0;
}
