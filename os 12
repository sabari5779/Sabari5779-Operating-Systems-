#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>

sem_t chop[5];

void* eat(void* num) {
    int i = *(int*)num;

    sem_wait(&chop[i]);
    sem_wait(&chop[(i+1)%5]);

    printf("Philosopher %d is eating\n", i);

    sem_post(&chop[i]);
    sem_post(&chop[(i+1)%5]);

    return NULL;
}

int main() {
    pthread_t t[5];
    int id[5];

    for(int i=0;i<5;i++)
        sem_init(&chop[i], 0, 1);

    for(int i=0;i<5;i++) {
        id[i] = i;
        pthread_create(&t[i], NULL, eat, &id[i]);
    }

    for(int i=0;i<5;i++)
        pthread_join(t[i], NULL);

    return 0;
}
